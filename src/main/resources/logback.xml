<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Silent console - only errors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Only show ERROR level to console -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
